<% layout('./layouts/layout.eta') %>
<h1></h1>
<% if (it.incorrect) { %>

    <button type="button" class="btn-large btn-danger"> Incorrect! </button>
    </br>
    <button class="btn-large"> The correct option was <%= it.right_answer %> </button>
    </br>
<% } else { %>

    <button type="button" class="btn-large btn-success"> Correct! </button>
    </br>

<% } %>

<a href="/quiz" class="paper-btn btn-large"> Next question -> </a>